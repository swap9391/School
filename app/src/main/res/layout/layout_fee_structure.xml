         android:layout_centerHorizontal="true"
         android:layout_margin="7dp"
         android:text=""
         android:gravity="center"
         android:background="@drawable/shape_circle" />
 -->

    <TextView
        android:id="@+id/caption_total_fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:text="Total fees"
        android:textSize="19sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt_total_fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/caption_total_fees"
        android:ems="10"
        android:text="50000"
        android:textSize="19sp" />


    <TextView
        android:id="@+id/caption_installment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caption_total_fees"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:text="No. Of Installments"
        android:textSize="19sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt_first_installment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_total_fees"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/caption_installment_count"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="-20000"
        android:textColor="@color/green"
        android:textSize="19sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_first_installment"
        android:layout_margin="10dp" />
</RelativeLayout>