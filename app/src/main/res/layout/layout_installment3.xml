<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtBalance3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/caldroid_light_red" />

    <TextView
        android:id="@+id/lblInstallmentType3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Third Installment"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPaymentMode3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Select Payment Mode" />

    <Spinner
        android:id="@+id/spinner_payment_mode3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"></Spinner>


    <EditText
        android:id="@+id/edt_cheque_bank3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:hint="Enter bank name"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edt_cheque_number3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:hint="Enter cheque number"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edt_installment_amount3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter installment amount"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/date_picker_installment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_calender"
        android:text="Select Next Payment Date"

        />

    <CheckBox
        android:id="@+id/chk_paid3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:checked="false"
        android:text="Paid" />


    <TextView
        android:id="@+id/lblChequeImg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Capture Cheque Photo" />

    <ImageView
        android:id="@+id/img_cheque3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:src="@drawable/defualt_album_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/caldroid_gray"></View>


</LinearLayout>