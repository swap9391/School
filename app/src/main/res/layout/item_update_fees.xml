<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/caption_installment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:ems="7"
                android:text="@string/lbl_installment_type"
                android:textSize="19sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_isntallment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/caption_installment_type"
                android:ems="10"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/caption_installment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/caption_installment_type"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:ems="7"
                android:text="@string/lbl_installment_date"
                android:textSize="19sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_installment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_isntallment_type"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/caption_installment_date"
                android:ems="10"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/caption_installment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/caption_installment_date"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:ems="7"
                android:text="@string/lbl_installment_amount"
                android:textSize="19sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_installment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_installment_date"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/caption_installment_amount"
                android:ems="10"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/caption_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/caption_installment_amount"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:ems="7"
                android:text="@string/lbl_payment_mode"
                android:textSize="19sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_installment_amount"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/caption_payment_mode"
                android:ems="10"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/caption_payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/caption_payment_mode"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:ems="7"
                android:text="@string/lbl_payment_status"
                android:textSize="19sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_payment_mode"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/caption_payment_status"
                android:ems="10"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_payment_status"
                android:layout_margin="7dp"
                android:background="@color/colorPrimary"
                android:text="@string/btn_pay" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>